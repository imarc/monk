{
    "name": "imarc/monk",
    "description": "Monk is a Wordpress project bootstrap.",
    "homepage": "https://github.com/imarc/monk",
    "type": "project",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Jeff Turcotte",
            "email": "jeff.turcotte@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.4",
        "johnpbloch/wordpress": "~4.2",
        "wpackagist-plugin/advanced-custom-fields": "~4.4",
        "wpackagist-plugin/timber-library": "^1.1",
        "wpackagist-plugin/debug-bar": "^0.8.4",
        "wpackagist-plugin/debug-bar-timber": "^0.3.0",
        "roots/wp-password-bcrypt": "^1.0"
    },
    "extra": {
        "installer-paths": {
            "public/content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "public/content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/content/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/wordpress"
    }
}
